<Page x:Class="lab1_compilator_.WorkPlace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab1_compilator_"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkPlace">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtEditor" ScrollViewer.ScrollChanged="txtEditor_ScrollChanged" Grid.Column="1" TextChanged="TextChanged_Handler" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <TextBox x:Name="Counter" VerticalScrollBarVisibility="Hidden"  IsReadOnly="True" Grid.Column="0" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Hidden" />
    </Grid>
</Page>
